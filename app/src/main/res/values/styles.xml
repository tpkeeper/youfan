<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/divider_bg</item>
        <item name="brand_divider">@drawable/brand_divider</item>
    </style>

    <style name="bottom_main">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/tb_text_color_selector</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="pop_home">
        <item name="android:windowEnterAnimation">@anim/popwindow_home_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/popwindow_home_exit_anim</item>
    </style>

    <style name="pop_brand">
        <item name="android:windowEnterAnimation">@anim/popwindow_brand_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/popwindow_brand_exit_anim</item>
    </style>

    <style name="pop_goods_select">
        <item name="android:windowEnterAnimation">@anim/popwindow_goods_select_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/popwindow_goods_select_exit_anim</item>
    </style>

</resources>
